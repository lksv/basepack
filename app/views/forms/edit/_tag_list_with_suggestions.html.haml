= form.input field.method_name, label: "<i class='icon-tags'></i> #{field.label}", hint: field.help, required: field.required? do
  = form.input_field field.method_name, { type: :hidden,
      data: { select: { tags: tag_suggestions(field, length: 10, order: { count: :desc })}}}.deep_merge(field.html_attributes)
